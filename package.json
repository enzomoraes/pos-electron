{
  "name": "pos-electron",
  "version": "1.0.6",
  "description": "A POS application",
  "main": "./out/main/index.js",
  "author": "enzomoraes",
  "homepage": "https://github.com/enzomoraes/pos-electron",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache . --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "rebuild": "electron-rebuild -f -w escpos usb",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win -p always",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "typeorm": "typeorm-ts-node-commonjs",
    "migrate:create": "sh -c 'npx typeorm migration:create ./src/main/database/migrations/$1' --",
    "migrate:up": "npx typeorm -d ./src/main/database/database.ts migration:run",
    "migrate:down": "npx typeorm -d ./src/main/database/database.ts migration:revert"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "better-sqlite3": "^11.9.1",
    "electron-log": "^5.4.0",
    "electron-updater": "^6.3.9",
    "react-confirm-alert": "^3.0.6",
    "react-hook-form": "^7.56.1",
    "react-toastify": "^11.0.5",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.22"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/escpos": "^2.5.5",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^35.1.5",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "i": "^0.3.7",
    "npm": "^11.3.0",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.5.3",
    "typescript": "^5.8.3",
    "vite": "^6.2.6"
  }
}
